generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Product {
  id            String   @id @default(uuid())
  updatedAt     DateTime @updatedAt
  name          String
  shopName      String
  url           String?  @unique
  image         String?
  available     Boolean
  categoryId    String?
  quantity      Float?
  priceId       String?  @unique
  unit          String
  productShopId String
  priceHistory  Price[]  @relation("priceHistory")
  price         Price?   @relation("currentPrice", fields: [priceId], references: [id])

  @@unique([shopName, productShopId])
}

model Price {
  id              String    @id @default(uuid())
  productId       String?
  date            DateTime  @updatedAt
  discountPercent String?
  discountStart   DateTime?
  discountEnd     DateTime?
  price           Float
  pricePer        Float
  product         Product?  @relation("priceHistory", fields: [productId], references: [id])
  currentProduct  Product?  @relation("currentPrice")
}
